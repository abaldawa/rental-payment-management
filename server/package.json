{
  "name": "server",
  "version": "1.0.0",
  "description": "A Typescript based Node.js server to manage payments in rental contracts",
  "scripts": {
    "clean": "rimraf ./build",
    "lint": "./node_modules/.bin/eslint . --ext .ts",
    "start": "npm run build && NODE_OPTIONS=--enable-source-maps node ./build/src/server.js",
    "start:watch": "npm run build:watch & NODE_OPTIONS=--enable-source-maps nodemon --inspect ./build/src/server.js",
    "build": "npm run clean && node_modules/.bin/tsc",
    "build:watch": "npm run build -- -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Abhijit Baldawa",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.8",
    "moment": "^2.25.3",
    "mongoose": "^5.9.12",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.0",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.7.15",
    "@types/node": "^13.13.5",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "nodemon": "^2.0.3"
  }
}
